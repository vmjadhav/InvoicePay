<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="6dp"
    tools:context=".CreateInvoiceActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/invoiceReference_editbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Invoice Reference" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/invoiceNo_editbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Invoice Number" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <EditText
            android:id="@+id/expiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:hint="select expiry date"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Customer"/>

        <Button
            android:id="@+id/changeCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="Change Customer"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/contact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:visibility="gone">

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/contactImage"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_below="@+id/contactName"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@drawable/contact_icon" />

        <TextView
            android:id="@+id/contactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contactImage"
            android:lineSpacingExtra="3dp"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contactImage"
            android:layout_below="@+id/contactName"
            android:lineSpacingExtra="3dp"
            android:padding="5dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/contactEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contactImage"
            android:layout_below="@+id/contactNumber"
            android:lineSpacingExtra="3dp"
            android:padding="5dp"
            android:textSize="15sp" />

    </RelativeLayout>



    <Button
        android:id="@+id/addLineItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Line Items"/>

</LinearLayout>