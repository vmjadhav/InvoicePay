<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewTransaction"
        android:layout_marginBottom="0dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance :"
            android:textSize="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 50,000"
            android:textSize="32dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/viewTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttosLayout"
        android:layout_marginBottom="0dp"
        android:gravity="right"
        android:background="#654321"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to view Transactions"
            android:textSize="32dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttosLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/topButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:text="Fund Transfer"
                android:layout_weight="1"
                />
            <Button android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:text="Bill Pay"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="Recharge"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/middleButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/topButtons"
            >

            <Button android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:text="Accounts"
                android:layout_weight="1"
                />
            <Button android:id="@+id/createInvoiceButton"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:text="Invoice"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="Pay Later"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/middleButtons"
            >

            <Button android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:text="Invest  Insure"
                android:layout_weight="1"
                />
            <Button android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:text="BHIM UPI"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="Services"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>