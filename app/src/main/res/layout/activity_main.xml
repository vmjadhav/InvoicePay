<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/contact_icon"
            android:layout_weight="0.7"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello, Nitesh Kumar"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="left"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Balance : 50,000 INR"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewTransaction"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/viewTransaction"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/buttosLayout"
        android:layout_marginBottom="0dp"
        android:gravity="right"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="Tap to view Transactions"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="16dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttosLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/topButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:text="Fund Transfer"
                android:background="@color/white"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp" />

            <Button android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:text="Bill Pay"
                android:background="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Recharge"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/middleButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/topButtons"
            >

            <Button android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:text="Accounts"
                android:layout_weight="1"
                />
            <Button android:id="@+id/createInvoiceButton"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:text="Invoice"
                android:background="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Pay Later"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/middleButtons"
            >

            <Button android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"
                android:text="Invest  Insure"
                android:layout_weight="1"
                />
            <Button android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"
                android:text="BHIM UPI"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="Services"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>